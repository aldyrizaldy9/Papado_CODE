<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aldy.papado.DaftarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textSize="32sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <Spinner
                        android:id="@+id/spinner_jenisuser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <EditText
                        android:id="@+id/daftar_username_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <EditText
                        android:id="@+id/daftar_email_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <EditText
                        android:id="@+id/daftar_telepon_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Telepon" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <EditText
                        android:id="@+id/daftar_password_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kata Sandi" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <EditText
                        android:id="@+id/daftar_repassword_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Konfirmasi Sandi" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/daftar_namatempat_text_hidden">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <EditText
                        android:id="@+id/daftar_namatempat_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Tempat" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
