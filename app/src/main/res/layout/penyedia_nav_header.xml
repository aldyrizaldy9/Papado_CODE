<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="?attr/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/penyedia_nav_header_image1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circlebutton" />

    <TextView
        android:id="@+id/penyedia_nav_header_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/penyedia_nav_header_image1"
        android:text="Nama Pemilik"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <TextView
        android:id="@+id/penyedia_nav_header_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/penyedia_nav_header_text1"
        android:text="Nama Lapangan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>