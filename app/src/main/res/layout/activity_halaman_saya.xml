<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/penyedia_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aldy.papado.HalamanSayaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/penyedia_nav_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/penyedia_profile_foto"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_account_circle_black_48dp" />

                <TextView
                    android:id="@+id/penyedia_profile_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ini nama penyedia" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_account_circle_black_48dp" />

                    <TextView
                        android:id="@+id/penyedia_profile_alamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ini alamat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_account_circle_black_48dp" />

                    <TextView
                        android:id="@+id/penyedia_profile_ownername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ini nama pemilik" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_account_circle_black_48dp" />

                    <TextView
                        android:id="@+id/penyedia_profile_jam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ini jam buka dan tutup" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_account_circle_black_48dp" />

                    <TextView
                        android:id="@+id/penyedia_profile_notelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ini no telepon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_account_circle_black_48dp" />

                    <TextView
                        android:id="@+id/penyedia_profile_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="edit profil" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--ini list lapangan-->
                </ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_account_circle_black_48dp" />

                    <TextView
                        android:id="@+id/penyedia_profile_editlap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tambah baru" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/penyedia_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/penyedia_nav_header"
        app:menu="@menu/penyedia_nav_menu"></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
